@model IEnumerable<UsuarioModel>

@{
    ViewData["Title"] = "Usuários";
}

<div class="container-fluid">
    <div class="p-3 mb-3">
        <h3 class="mb-3 text-left" style="color: white">Usuários</h3>
    </div>
    <div class="row justify-content-center">
        <div class="mt-5">
            <div class="table-responsive" style="border-radius: 15px">
                <table class="table table-striped">
                    <thead class="table cor-unifaat">
                        <tr>
                            <th class="text-center text-black" scope="col">NOME</th>
                            <th class="text-center text-black" scope="col">CPF</th>
                            <th class="text-center text-black" scope="col">DATA DE NASCIMENTO</th>
                            <th class="text-center text-black" scope="col">E-MAIL</th>
                            <th class="text-center text-black" scope="col">CARGO</th>
                            <th class="text-center text-black" scope="col">AÇÕES</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in Model)
                        {
                            <tr>
                                <td class="text-center">@usuario.Nome</td>
                                <td class="text-center">@usuario.Cpf</td>
                                <td class="text-center">@usuario.DataNascimento.ToShortDateString()</td>
                                <td class="text-center">@usuario.Email</td>
                                <td class="text-center">@usuario.Cargo</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-success rounded m-1" asp-controller="Usuarios" asp-action="DetalhesUsuario" asp-route-UsuarioId="@usuario.Id">Detalhes</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

