@model UsuarioModel

@{
    ViewData["Title"] = "Detalhes do Usuário";
}

<div class="container-fluid">
    <div class="p-3 mb-3">
        <h3 class="text-left" style="color: white">Detalhes do Usuário</h3>
    </div>
    <br />
    <div class="card">
        <div class="card-body">
            <h4 class="card-title text-center">Usuário</h4>
            <br />
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th scope="row" class="col-sm-3">Id do Usuário:</th>
                        <td class="col-sm-9">@Model.Id</td>
                    </tr>
                    <tr>
                        <th scope="row" class="col-sm-3">Nome:</th>
                        <td class="col-sm-9">@Model.Nome</td>
                    </tr>
                    <tr>
                        <th scope="row" class="col-sm-3">E-mail:</th>
                        <td class="col-sm-9">@Model.UserName</td>
                    </tr>
                    <tr>
                        <th scope="row" class="col-sm-3">Sobrenome:</th>
                        <td class="col-sm-9">@Model.Sobrenome</td>
                    </tr>
                    <tr>
                        <th scope="row" class="col-sm-3">Data de Nascimento:</th>
                        <td class="col-sm-9">@Model.DataNascimento.ToShortDateString()</td>
                    </tr>
                    <tr>
                        <th scope="row" class="col-sm-3">CPF:</th>
                        <td class="col-sm-9">@Model.Cpf</td>
                    </tr>
                    <tr>
                        <th scope="row" class="col-sm-3">Admin:</th>
                        <td class="col-sm-9">@Model.Admin</td>
                    </tr>
                    <tr>
                        <th scope="row" class="col-sm-3">Licença:</th>
                        <td class="col-sm-9">@Model.Licenca</td>
                    </tr>
                    <tr>
                        <th scope="row" class="col-sm-3">Cargo:</th>
                        <td class="col-sm-9">@Model.Cargo</td>
                    </tr>
                </tbody>
            </table>
            <div class="text-center mt-3">
                <a asp-action="IndexUsuario" asp-controller="Usuario" class="btn btn-secondary">Voltar</a>
            </div>
        </div>
    </div>
</div>
