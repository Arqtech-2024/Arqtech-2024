@using Arqtech.Models.Enums
@model UsuarioModel

@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="container-fluid">
    <div class="p-3 mb-3">
        <h3 class="text-left" style="color: white">Editar Usuário</h3>
    </div>
    <br />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Informações do Usuário</h4>
                    <form asp-controller="Usuario" asp-action="SalvarEdicaoUsuario" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label">Nome:</label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="Sobrenome" class="control-label">Sobrenome:</label>
                                <input asp-for="Sobrenome" class="form-control" />
                                <span asp-validation-for="Sobrenome" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="DataNascimento" class="control-label">Data de Nascimento:</label>
                                <input asp-for="DataNascimento" class="form-control" />
                                <span asp-validation-for="DataNascimento" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="Cpf" class="control-label">CPF:</label>
                                <input asp-for="Cpf" class="form-control" />
                                <span asp-validation-for="Cpf" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="Admin" class="control-label">Admin:</label>
                                <input asp-for="Admin" class="form-control" />
                                <span asp-validation-for="Admin" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="Licenca" class="control-label">Licença:</label>
                                <input asp-for="Licenca" class="form-control" />
                                <span asp-validation-for="Licenca" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="Cargo" class="control-label">Cargo:</label>
                                <select asp-for="Cargo" asp-items="@Enum.GetValues(typeof(TipoCargoEnum)).Cast<TipoCargoEnum>().Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() })" class="form-control"></select>
                                <span asp-validation-for="Cargo" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary col-5">Salvar</button>
                            <a asp-controller="Usuario" asp-action="IndexUsuario" class="btn btn-secondary">Voltar para a Lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
