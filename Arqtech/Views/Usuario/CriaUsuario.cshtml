@model CriaUsuarioViewModel

<div class="container-fluid">
    <div class="card p-5">
        <h3 class="text-center" style="color: black">Registre-se</h3>
        <form asp-area="" asp-controller="Usuario" asp-action="CriaUsuario" method="post">
            <div class="row">
                <div class="col-6">
                    <label class="ms-1 mt-1 form-label" asp-for="Nome">Nome</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <label class="ms-1 mt-1 form-label" asp-for="Sobrenome">Sobrenome</label>
                    <input asp-for="Sobrenome" class="form-control" />
                    <span asp-validation-for="Sobrenome" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label class="ms-1 mt-1 form-label" asp-for="Email">E-mail</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <label class="ms-1 mt-1 form-label" asp-for="Senha">Senha</label>
                    <input asp-for="Senha" type="password" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label class="ms-1 mt-1 form-label" asp-for="Cpf">CPF</label>
                    <input asp-for="Cpf" placeholder="000.000.000-00" id="cpf" class="form-control" pattern="[0-9]{3}\.[0-9]{3}\.[0-9]{3}-[0-9]{2}" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <label class="ms-1 mt-1 form-label" asp-for="DataNascimento">Data de Nascimento</label>
                    <input asp-for="DataNascimento" class="form-control" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label class="ms-1 mt-1 form-label" asp-for="Licenca">Licença</label>
                    <input asp-for="Licenca" class="form-control" />
                    <span asp-validation-for="Licenca" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <label class="ms-1 mt-1 form-label" asp-for="Cargo">Cargo</label>
                    <select asp-for="Cargo" class="form-control">
                        <option value="Cliente">Cliente</option>
                        <option value="Arquiteto">Arquiteto</option>
                        <option value="Engenheiro">Engenheiro</option>
                    </select>
                    <span asp-validation-for="Cargo" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="text-center">
                <button type="submit" class="btn btn-success btn-block">Registrar</button>
            </div>
        </form>
    </div>
</div>
