@model List<MaterialModel>

@{
    ViewData["Title"] = "Materiais";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center p-3 mb-3">
        <h1>Materiais</h1>
        <a class="btn btn-success" asp-area="" asp-controller="Material" asp-action="CriaMaterial">Criar novo material</a>
    </div>
       
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="text-center text-black" scope="col">Nome</th>
                            <th class="text-center text-black" scope="col">Preço</th>
                            <th class="text-center text-black" scope="col">Descrição</th>
                            <th class="text-center text-black" scope="col">Loja</th>
                            <th class="text-center text-black" scope="col">Quantidade</th>
                            <th class="text-center text-black" scope="col">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var material in Model)
                        {
                            <tr>
                                <td class="text-center">@material.Nome</td>
                                <td class="text-center">@material.Preco.ToString("C2")</td>
                                <td class="text-center">@material.Descricao</td>
                                <td class="text-center">@material.Loja.Nome</td>
                                <td class="text-center">@material.Quantidade</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-primary rounded m-1" asp-controller="Material" asp-action="DetalhesMaterial" asp-route-MaterialId="@material.MaterialId">Detalhes</a>
                                        <a class="btn btn-outline-danger rounded m-1" asp-controller="Material" asp-action="DeletarMaterial" asp-route-MaterialId="@material.MaterialId">Deletar</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
</div>
