@model CriaMaterialViewModel

<div class="container mt-5">
    <h2>Cadastro de Material</h2>
    <form asp-controller="Material" asp-action="CriaMaterial" method="post">
        <div class="mb-3">
            <label for="Nome" class="form-label">Nome</label>
            <input type="text" class="form-control" id="Nome" name="Nome" placeholder="Digite o nome do material" value="@Model.Nome">
        </div>
        <div class="mb-3">
            <label for="Preco" class="form-label">Preço</label>
            <input type="number" class="form-control" id="Preco" name="Preco" placeholder="Digite o preço do material" value="@Model.Preco">
        </div>
        <div class="mb-3">
            <label for="Descricao" class="form-label">Descrição</label>
            <textarea class="form-control" id="Descricao" name="Descricao" rows="3" placeholder="Digite a descrição do material">@Model.Descricao</textarea>
        </div>
        <div class="mb-3">
            <label for="LojaId" class="form-label">ID da Loja</label>
            <input type="number" class="form-control" id="LojaId" name="LojaId" placeholder="Digite o ID da loja" value="@Model.LojaId">
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
</div>