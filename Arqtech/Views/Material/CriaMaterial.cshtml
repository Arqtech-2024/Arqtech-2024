@model CriaMaterialViewModel

<div class="container mt-5">
    <h2>Cadastro de Material</h2>
    <form asp-controller="Material" asp-action="CriaMaterial" method="post">
        <div class="form-group">
            <label asp-for="Nome" class="control-label">Nome</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Preco" class="form-label">Preço</label>
            <input asp-for="Preco" type="number" class="form-control" id="Preco" name="Preco" placeholder="Digite o preço do material">
            <span asp-validation-for="Preco" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Descricao" class="form-label">Descrição</label>
            <textarea class="form-control" id="Descricao" name="Descricao" rows="3" placeholder="Digite a descrição do material"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        <h4 class="text-center mb-4">Selecionar Loja</h4>
        <div class="row mb-4">
            <div class="col">
                <select id="LojaId" name="LojaId" asp-for="LojaId" class="form-select">
                    @foreach (var lojas in ViewBag.Lojas)
                    {
                        <option value="@lojas.LojaId">@lojas.Nome</option>
                    }
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-controller="Material" asp-action="IndexMaterial" class="btn btn-secondary m-1">Voltar para o cadastro</a>

    </form>
</div>