@model ProjetoModel

@{
    ViewData["Title"] = "Editar Projeto";
}

<div class="container">
    <div class="p-3 mb-3">
        <h3 class="text-left" style="color: white">Detalhes do Projeto</h3>
    </div>
    <br />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Informações do Projeto</h4>
                    <form asp-controller="Projeto" asp-action="EditarProjeto" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ProjetoId" />
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label">Nome:</label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="ValorPedreiro" class="control-label">Valor Pedreiro:</label>
                                <input asp-for="ValorPedreiro" class="form-control" />
                                <span asp-validation-for="ValorPedreiro" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="ValorMaterial" class="control-label">Valor Material:</label>
                                <input asp-for="ValorMaterial" class="form-control" />
                                <span asp-validation-for="ValorMaterial" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="ValorProjetoArquiteto" class="control-label">Valor Projeto Arquiteto:</label>
                                <input asp-for="ValorProjetoArquiteto" class="form-control" />
                                <span asp-validation-for="ValorProjetoArquiteto" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="ValorTotalProjeto" class="control-label">Valor Total Projeto:</label>
                                <input asp-for="ValorTotalProjeto" class="form-control" />
                                <span asp-validation-for="ValorTotalProjeto" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="Logradouro" class="control-label">Logradouro:</label>
                                <input asp-for="Logradouro" class="form-control" />
                                <span asp-validation-for="Logradouro" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="Numero" class="control-label">Número:</label>
                                <input asp-for="Numero" class="form-control" />
                                <span asp-validation-for="Numero" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="Cidade" class="control-label">Cidade:</label>
                                <input asp-for="Cidade" class="form-control" />
                                <span asp-validation-for="Cidade" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <input type="hidden" asp-for="Usuario" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <input type="hidden" asp-for="UsuarioId" class="form-control" />
                            </div>
                        </div>
                        <br />
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary col-5">Salvar</button>
                            <a asp-controller="Projeto" asp-action="IndexProjeto" class="btn btn-secondary">Voltar para a Lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
