@model CriaProjetoViewModel

@{
    ViewBag.Title = "Criar Projeto";
}

<div class="container">
    <h2 class="text-center">Criar projeto</h2>
    <hr />
    <form asp-action="CriaProjeto" asp-controller="Projeto" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-center">Detalhes do Projeto</h5>
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label">Nome do projeto</label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Logradouro" class="control-label">Logradouro</label>
                            <input asp-for="Logradouro" class="form-control" />
                            <span asp-validation-for="Logradouro" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Numero" class="control-label">Número</label>
                            <input asp-for="Numero" class="form-control" />
                            <span asp-validation-for="Numero" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Cidade" class="control-label">Cidade</label>
                            <input asp-for="Cidade" class="form-control" />
                            <span asp-validation-for="Cidade" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-center">Valores do Projeto</h5>
                        <div class="form-group">
                            <label asp-for="ValorPedreiro" class="control-label">Valor Mão de Obra</label>
                            <input asp-for="ValorPedreiro" class="form-control" />
                            <span asp-validation-for="ValorPedreiro" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ValorMaterial" class="control-label">Valor Material</label>
                            <input asp-for="ValorMaterial" value="Calculado automaticamente" class="form-control" disabled />
                            <span asp-validation-for="ValorMaterial" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ValorProjetoArquiteto" class="control-label">Valor Projeto Arquiteto</label>
                            <input asp-for="ValorProjetoArquiteto" class="form-control" />
                            <span asp-validation-for="ValorProjetoArquiteto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ValorTotalProjeto" class="control-label">Valor Total Projeto</label>
                            <input asp-for="ValorTotalProjeto" value="Calculado automaticamente" class="form-control" disabled />
                            <span asp-validation-for="ValorTotalProjeto" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12 d-flex justify-content-center">
                <input type="submit" value="Criar" class="btn btn-success" />
                <a asp-action="IndexProjeto" asp-controller="Projeto" class="btn btn-secondary m-1">Voltar para o Projeto</a>
            </div>
        </div>
    </form>
</div>